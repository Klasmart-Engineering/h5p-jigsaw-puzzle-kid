[
  {
    "name": "puzzleImage",
    "label": "Puzzle image",
    "description": "Image that the tiles should be cut from.",
    "type": "library",
    "options": [
      "H5P.Image 1.1"
    ]
  },
  {
    "name": "tilesHorizontal",
    "label": "Number of puzzle tiles horizontally",
    "description": "How many puzzle tiles should the jigsaw puzzle have horizontally.",
    "type": "number",
    "min": 2,
    "default": 4
  },
  {
    "name": "tilesVertical",
    "label": "Number of puzzle tiles vertically",
    "description": "How many puzzle tiles should the jigsaw puzzle have vertically.",
    "type": "number",
    "min": 2,
    "default": 3
  },
  {
    "name": "sound",
    "type": "group",
    "label": "Sound settings",
    "importance": "low",
    "description": "These options will let you set sound related options.",
    "fields": [
      {
        "name": "backgroundMusic",
        "type": "select",
        "label": "Background Music",
        "description": "Optional background music.",
        "options": [
          {
            "value": "AudioPuzzleDefaultSong1",
            "label": "Song 1"
          },
          {
            "value": "AudioPuzzleDefaultSong2",
            "label": "Song 2"
          },
          {
            "value": "AudioPuzzleDefaultSong3",
            "label": "Song 3"
          },
          {
            "value": "AudioPuzzleDefaultSong4",
            "label": "Song 4"
          },
          {
            "value": "custom",
            "label": "Custom"
          }
        ],
        "optional": true
      },
      {
        "name": "backgroundMusicCustom",
        "type": "audio",
        "label": "Background Music (custom)",
        "description": "Optional background music.",
        "importance": "low",
        "optional": true,
        "widget": "showWhen",
        "showWhen": {
          "rules": [
            {
              "field": "backgroundMusic",
              "equals": "custom"
            }
          ]
        }
      },
      {
        "name": "autoplayBackgroundMusic",
        "label": "Autoplay background music",
        "description": "Try to autoplay background music. May not be possible depending on the browser's policy.",
        "type": "boolean",
        "importance": "low",
        "default": false
      },
      {
        "name": "puzzleTilePickUp",
        "type": "audio",
        "label": "Pick up puzzle tile",
        "description": "Optional sound to play when a puzzle tile is picked up.",
        "importance": "low",
        "optional": true
      },
      {
        "name": "puzzleTileCorrect",
        "type": "audio",
        "label": "Drop puzzle tile correctly",
        "description": "Optional sound to play when a puzzle tile is dropped in the correct spot.",
        "importance": "low",
        "optional": true
      }
    ]
  },
  {
    "name": "behaviour",
    "type": "group",
    "label": "Behavioural settings",
    "importance": "low",
    "description": "These options will let you control how the task behaves.",
    "fields": [
      {
        "name": "timeLimit",
        "label": "Time limit",
        "description": "Set an optional time limit in seconds.",
        "type": "number",
        "importance": "low",
        "optional": true,
        "min": 1
      },
      {
        "name": "attentionSeeker",
        "type": "group",
        "label": "Attention seeker",
        "importance": "low",
        "widget": "attentionseeker",
        "attentionseeker": {
          "style": "style",
          "interval": "interval"
        },
        "optional": true,
        "fields": [
          {
            "name": "style",
            "type": "select",
            "label": "Style of the attention seeker",
            "importance": "low",
            "description": "Set the visual style of the attention seeker.",
            "optional": true,
            "options": [
              {
                "value": "bounce",
                "label": "Bounce"
              },
              {
                "value": "flash",
                "label": "Flash"
              },
              {
                "value": "focus",
                "label": "Focus"
              },
              {
                "value": "heartbeat",
                "label": "Heart beat"
              },
              {
                "value": "highlight",
                "label": "Highlight"
              },
              {
                "value": "pulse",
                "label": "Pulse"
              },
              {
                "value": "rubberband",
                "label": "Rubber band"
              },
              {
                "value": "shakex",
                "label": "Shake X"
              },
              {
                "value": "tada",
                "label": "Tada"
              },
              {
                "value": "wobble",
                "label": "Wobble"
              }
            ]
          },
          {
            "name": "interval",
            "type": "number",
            "label": "Time interval",
            "description": "Set how many seconds time interval between triggering the attention should be.",
            "importance": "low",
            "optional": true,
            "default": 10,
            "min": 1
          }
        ]
      },
      {
        "name": "showBackground",
        "label": "Show faint background",
        "description": "Show faint background to indicate where a puzzle tile needs to go.",
        "type": "boolean",
        "importance": "low",
        "default": true,
        "optional": true
      },
      {
        "name": "sortingSpace",
        "label": "Sorting space",
        "description": "Set how much space in percent should be attached next to the jigsaw puzzle for sorting the tiles.",
        "type": "number",
        "importance": "low",
        "default": 50,
        "min": 0,
        "max": 75
      },
      {
        "name": "enableComplete",
        "label": "Enable \"Complete\"",
        "type": "boolean",
        "importance": "low",
        "default": true,
        "optional": true
      },
      {
        "name": "enableHint",
        "label": "Enable \"Hint\"",
        "type": "boolean",
        "importance": "low",
        "default": true,
        "optional": true
      },
      {
        "name": "enableRetry",
        "label": "Enable \"Retry\"",
        "type": "boolean",
        "importance": "low",
        "default": true,
        "optional": true
      },
      {
        "name": "enableSolutionsButton",
        "label": "Enable \"Solution\"",
        "type": "boolean",
        "importance": "low",
        "default": true,
        "optional": true,
        "widget": "none"
      }
    ]
  },
